<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imv_icon"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height" />

    <TextView
        android:id="@+id/txv_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_icon_text"
        android:layout_toEndOf="@+id/imv_icon"
        android:textColor="@color/toggleMenuTextColor"
        android:textSize="@dimen/toggle_menu_text_size" />
</RelativeLayout>